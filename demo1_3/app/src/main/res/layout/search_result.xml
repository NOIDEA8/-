<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="35dp"
    >

    <LinearLayout
        android:id="@+id/search_result_xml"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <ScrollView
            android:id="@+id/sc_search_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="13dp"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                android:background="@color/main_theme_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/main_theme_color"
                    >
                    <LinearLayout
                        android:id="@+id/origin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/tips_for_origin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="原句："
                            android:textSize="20dp"></TextView>

                        <TextView
                            android:id="@+id/origin_sentence"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="在TextView之间或旁边添加一个没有背景的View，并设置其高度（对于水平分割线）或宽度（对于垂直分割线）和颜色，以此作为分割线。"
                            android:textSize="20dp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tips_for_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="译文："
                            android:textSize="20dp"></TextView>

                        <TextView
                            android:id="@+id/result_sentence"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="在TextView之间或旁边添加一个没有背景的View，并设置其高度（对于水平分割线）或宽度（对于垂直分割线）和颜色，以此作为分割线。"
                            android:textSize="20dp">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>